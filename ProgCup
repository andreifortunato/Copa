    }
  }
}
public class Team : Copa {

    public int IDteam = 9;
    public string Treinador;
    public int Ntitulares;
    public int Nreservas;
    public int Pontuação;

}
class CopaCad:Team
{
    
    public static void Main(String[] args)
    {
       
        
                 Team teamA = new Team();
                 teamA.IDteam = 15;
                 teamA.Treinador ="********************";
                 teamA.Ntitulares =11;
                 teamA.Nreservas =11;
                 teamA.Pontuação =00;

