        Console.WriteLine("Número de Jogadores Reservas:");
        teamA.Nreservas = Console.Read();
        Console.WriteLine("Pontuação da Partida:");
        teamA.Pontuação = Console.Read();
        vetChave1[0]= teamA.Pontuação;

                Team teamB = new Team();
                teamB.IDteam = 15;
                teamB.Treinador = "";
                teamB.Ntitulares = 11;
                teamB.Nreservas = 11;
