class SetupCup
{
    public static void Main()
    {

        int wCup;
        do
        {
            Console.WriteLine("************ Menu CopaCad *************");
            Console.WriteLine("******* 1 Cadastrar Time ********");
            Console.WriteLine("******* 2 Atualizar Pontuação ***");
            Console.WriteLine("******* 3 Acesso pelo IDteam ****");
            Console.WriteLine("******* 4 Acessar chave Grupos **");
            Console.WriteLine("******* 5 Data das Partidas *****");
            Console.WriteLine("******* 6 Convocar para Premiação");
            Console.WriteLine("******* 7 Sair ******************");


            wCup = Console.Read();

            switch (wCup)
            {
                case 1:
                    Console.WriteLine("Cadastrar Time");
                    break;
                case 2:
                    Console.WriteLine("Atualizar Pontuação");
                    break;
                case 3:
                    Console.WriteLine("Acesso IDteam");
                    break;
                case 4:
                    Console.WriteLine("Chave de Grupos");
                    break;
                case 5:
                    Console.WriteLine("Data das Partidas");
                    break;
                case 6:
                    Console.WriteLine("Convocar para Premiação");
                    break;
                case 7:
                    Console.WriteLine("Sair");
                    break;
            }

            Console.Write("Pressione ENTER para continuar...");
            Console.Write("Aguardando usuário...........");
            Console.ReadLine();

        } while (wCup < 7 && wCup >= 1);


    }

    class Chave : Team
    {
        public static void main(String[] args)
        { 
             bool vencedor = true;
             bool perdedor = false;
             string empate;

            string [] vetChave1  = new string[2];
                  vetChave1[0]=teamA;
                  vetChave1[1]=teamC;
            string [] vetChave2 = new string[2];
                  vetChave2[0]=teamB;
                  vetChave2[1]=teamD;
               
            int i,j;
            for(vetChave1[]=0;vetChave1[]<=i;vetChave1[]+=i);
            for(vetChave2[]=0;vetChave2[]<=j;vetChave2[]+=j);
            
     {
                
                if(vetChave1[i]==vetChave2[j])
                Console.WriteLine("Empate:", vetChave1[i],vetChave2[j]);
                vetChave1[0]= empate ;
                vetChave2[0]= empate ;
                Console.WriteLine("Solicitando Prorrogação....");
         if
                (vetChave1[i]== vetChave2[j])
                Console.WriteLine("Empate:", vetChave1[i],vetChave2[j]);
                vetChave1[0]= empate ;
                vetChave2[0]= empate ;
                Console.WriteLine("Solicitando Penaltis....");

         if    (vetChave1[i] > vetChave2[j])
                 Console.WriteLine("Resultado:", vetChave1[i],vetChave2[j]);
                vetChave1[1]= vencedor ;
                vetChave2[1]= perdedor ;
                Console.WriteLine("Semifinalista:",vetChave1[i]);

         if   (vetChave1[i] < vetChave2[j])
                 Console.WriteLine("Resultado:", vetChave1[i],vetChave2[j]);
                vetChave1[1]= perdedor ;
                vetChave2[1]= vencedor ;
                Console.WriteLine("Semifinalista:",vetChave2[j]);
            
            
            }
        }
    }
}
